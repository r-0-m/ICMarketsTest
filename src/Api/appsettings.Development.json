      { "Key": "btc-test3", "Name": "Bitcoin Testnet 3", "Url": "https://api.blockcypher.com/v1/btc/test3" },
      { "Key": "ltc-main", "Name": "Litecoin Mainnet", "Url": "https://api.blockcypher.com/v1/ltc/main" }
